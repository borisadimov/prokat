@import 'nib'

global-reset()

body
  font-family 'Helvetica'
  color #000
  min-width 960px
  a
    cursor pointer
    text-decoration none
    color #fff
    &:visited
      color #fff


.inner
  position relative
  width 940px
  height 100%
  margin 0 auto
  //background rgba(33,33,33,0.1)





.menu
  height 130px
  background #307cbc
  text-align center
  position relative
  color #fff
  text-transform uppercase
  font-size 13px
  ul
    margin 0 auto
    display inline-block
    li
      display inline-block
      width 80px
      margin-top 56px
      margin-left 24px
      &:nth-child(3)
        margin-left 168px
      &:nth-child(1)
        margin-left 0px

  .logo
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    margin-top 8px


.submenu
  height 36px
  background #000
  text-align center
  font-size 14px

  ul
    margin-left 25px
    clearfix()
    li
      float left
      transition all 0.25s ease-in-out
      margin 0
      a
        transition all 0.25s ease-in-out
        display inline-block
        padding 11px 35px 11px 35px
        &:visited
          color #fff
        &:hover
          color #000
      &:hover
        background #fff
        color #000


.categories
  text-align center
  ul
    display inline-block
    margin-top 33px
    li
      display inline-block
      margin 0 7px 0 7px
      a
        transition all 0.25s ease-in-out
        color #939393
        display inline-block
        padding 4px 8px 4px 8px
        background #fff
        font-size 13px
        &:visited
          color #939393
        &:hover
          background #000
          color #fff

.bikes
  clearfix()
  .bike
    position relative
    overflow hidden
    float left
    width 470px
    height 370px
    text-align center
    padding-top 100px
    img
      height 300px
      margin-top 0px
      transition transform 0.8s ease, margin 0.3s ease-in
    p.model
      margin-top 32px
      font-size 26px
      position: absolute
      left 50%
      transform translateX(-50%)
      bottom 5px
      transition all 0.4s
    h3
      position absolute
      top 120px
      left 0
      color 000
      width 470px
      font-size 38px
      opacity 0
      transition opacity 0.4s ease, color 0.2s ease
      &:hover
        color #307cbc
        cursor pointer
    p.text
      position absolute
      top 208px
      left 50%
      width 420px
      margin-left -210px
      font-size 12px
      opacity 0
      transition all 0.4s ease
    .button
      position absolute
      bottom 28px
      width 150px
      left 50%
      margin-left -75px
      background #000
      color #fff
      font-size 12px
      padding 6px 0
      cursor pointer
      opacity 0
      transition all 0.4s ease

    &:hover
      h3
        opacity 1
      p.model
        opacity 0
      img
        transform scale(0.35,0.35)
        margin-top 110px
      .button
        opacity 1
      p.text
        opacity 1
















